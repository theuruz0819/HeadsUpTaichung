<?xml version="1.0" encoding="utf-8"?>
<com.chauthai.swipereveallayout.SwipeRevealLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mode="same_level"
        app:dragEdge="right">

    <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent" >
        <ImageButton
                android:id="@+id/location_list_item_delete_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/icons8_delete_100"
                />
    </FrameLayout>

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
            >
            <TextView
                    android:id="@+id/location_list_item_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="title"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:padding="3dp"
                    />
            <TextView
                    android:id="@+id/location_list_item_note"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="note"
                    android:textSize="18sp"
                    android:padding="3dp"
                />
            <TextView
                    android:id="@+id/location_list_item_near_by_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="near by construction"
                    android:textSize="18sp"
                    android:textColor="#a83232"
                    android:padding="3dp"
                    />
        </LinearLayout>
    </FrameLayout>
</com.chauthai.swipereveallayout.SwipeRevealLayout>