<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
        >
        <TextView
                android:id="@+id/location_list_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="title"
                android:textSize="20sp"
                android:textStyle="bold"
                android:padding="3dp"
                />
        <TextView
                android:id="@+id/location_list_item_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="note"
                android:textSize="18sp"
                android:padding="3dp"
            />
        <TextView
                android:id="@+id/location_list_item_near_by_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="near by construction"
                android:textSize="18sp"
                android:textColor="#a83232"
                android:padding="3dp"
                />
    </LinearLayout>
    <ImageButton
            android:id="@+id/location_list_item_delete_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
        />
</RelativeLayout>